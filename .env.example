# Copy this file to .env and modify with your own settings
# The development settings.py will use these values
# For production, you should set these values as environment variables

# SECRET_KEY needs to be a long, random string
# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY = ''

DEBUG = TRUE

# PostgreSQL Database Configuration
# See docs/POSTGRESQL_SETUP.md for setup instructions and troubleshooting
# Note: Use 'localhost' for HOST to enable password authentication
DATABASE_NAME = 'fundraising'
DATABASE_USER = 'fundraiser'
DATABASE_PASSWORD = 'your_secure_password_here'
DATABASE_HOST = 'localhost'
DATABASE_PORT = '5432'

# Email Configuration
# For development/testing, emails won't be sent without AWS credentials
# For production on Railway, use AWS SES (see setup instructions below)

# AWS SES Configuration (for production email sending)
# Get these from AWS IAM after setting up SES
# Leave empty for dev/test (emails will be skipped)
AWS_ACCESS_KEY_ID = ''
AWS_SECRET_ACCESS_KEY = ''
AWS_SES_REGION = 'us-east-1'

# Legacy SMTP settings (optional, for local dev if you prefer SMTP)
# EMAIL_HOST = 'smtp.gmail.com'
# EMAIL_PORT = 587
# EMAIL_HOST_USER = ''
# EMAIL_HOST_PASSWORD = ''

# To test PayPal get a PayPal sandbox account at:
# https://developer.paypal.com/developer/accounts/
PAYPAL_TEST = TRUE
PAYPAL_ACCOUNT = ''

# Enter a comma-separated list of domains that are allowed to access the site
ALLOWED_HOSTS="localhost,something.domain"
CSRF_TRUSTED_ORIGINS="https://localhost,https://something.domain"

